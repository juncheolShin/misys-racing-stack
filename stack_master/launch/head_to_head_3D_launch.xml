<launch>
    <arg name="racecar_version" default="NUC2" />
    <arg name="LU_table" default="NUC2_hangar_pacejka" />
    <arg name="overtake_mode" default="spliner" /> <!--  spliner / graph_based -->
    <arg name="ctrl_algo" default="MAP"/> <!-- MAP / PP -->
    <arg name="measure" default="False" />


    <!-- launch state machine -->
    <include file="$(find-pkg-share state_machine)/launch/state_machine_launch.xml">
        <arg name="mode" value="head_to_head"/>
        <arg name="overtake_mode" value="$(var overtake_mode)"/>
    </include>
    
    <!-- SPLINE PLANNER-->
    <!-- this is actually the only way this works -->
   <!-- <group if="$(eval '\'$(var overtake_mode)\' == \'spliner\'')">
       <include file="$(find-pkg-share graph_planner)/launch/graph_planner_launch.xml">
           <arg name="param_file" value="$(find-pkg-share stack_master)/config/offline_params.yaml"/>
       </include>
      
   </group> -->

    <group if="$(eval '\'$(var overtake_mode)\' == \'spliner\'')"> 
        <include file="$(find-pkg-share graph_planner)/launch/graph_planner_launch.xml" />
    </group>
    
    <!-- PERCEPTION -->
    <include file="$(find-pkg-share perception)/launch/perception_launch.xml">
        <arg name="param_file" value="$(find-pkg-share stack_master)/config/opponent_tracker_params.yaml" />
    </include> 
    
    <!-- autoware_pointcloud_preprocessor -->
    <include file="$(find-pkg-share autoware_pointcloud_preprocessor)/launch/ring_passthrough_filter.launch.xml" />

    <!-- autoware_ground_segmentation -->
    <include file="$(find-pkg-share autoware_ground_segmentation)/launch/ray_ground_filter.launch.xml" />

    <!-- autoware_euclidean_cluster -->
    <include file="$(find-pkg-share autoware_euclidean_cluster)/launch/euclidean_cluster.launch.xml" />

    <!-- cluster_to_obstacle -->
    <include file="$(find-pkg-share cluster_to_obstacle_cpp)/launch/cluster_to_obstacle_cpp.launch.xml" />
    <include file="$(find-pkg-share pc2_to_scan_cpp)/launch/pc2_to_laserscan.launch.xml" />

</launch>